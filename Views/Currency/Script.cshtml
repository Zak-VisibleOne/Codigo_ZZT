<script>
    var dtCurrency;
    jQuery(document).ready(function () {
        dtCurrency = $('#dtCurrency').dataTable({
            lengthMenu: [[10, 25, 50, 100, 200, -1], [10, 25, 50, 100, 200, 'All']],
            columnDefs: [
                {
                    targets: [0], name: 'code', className: 'center', orderable: true, sWidth: '5%',
                },
                {
                    targets: [1], name: 'name', className: 'left', sWidth: '10%', orderable: false, render: function (data) {
                        return '<span class="badge badge-pill badge-secondary edit" style="font-size: 13px;">' + data + '</span>';
                    }
                },
                {
                    targets: [2], name: 'action', className: 'left', sWidth: '5%', orderable: false,
                    editor: { type: 'action', required: false, class: '' }, render: _RenderContentButton
                },
                {
                    targets: [3], name: 'ID', className: 'left', visible: false, sWidth: '0%',
                }
            ]
        });
        dtCurrency.on('draw.dt', function () {
            $('#dtCurrency .tooltips').tooltip();
        });
        dtCurrency.on('click', '.edit', function (e) {
            e.preventDefault();
            var pos = dtCurrency.fnGetPosition($(this).closest('tr')[0]);
            var data = dtCurrency.fnGetData(pos);
            var id = data[3];
            editCurrency(id);
        });
        dtCurrency.on('click', '.remove', function (e) {
            e.preventDefault();
            var pos = dtCurrency.fnGetPosition($(this).closest('tr')[0]);
            var data = dtCurrency.fnGetData(pos);
            var id = data[3];
            DeleteCurrency(id);
        });
        LoadCurrency();
    });
    function LoadCurrency() {
        var data = GetCurrency();
        dtCurrency.api().clear().rows.add(data).draw();
    }
    function GetCurrency() {
        var request = $.ajax({
            type: 'GET',
            dataType: 'json',
            async: false,
            beforeSend: function () {
                return true;
            },
            url: SITE_URL + "/Currency/GetCurrencyList",
            data: {
            }, success: function (data) {
            }
        });
        var result = request.responseJSON;
        return (result.data != null) ? result.data : [];
    }
    function editCurrency(id) {
        $('#hidID').val(id);
        $('#method').val('edit');
        var data = GetCurrencyByID(id);
        $('#txtCurrencyCode').val(data.Code);
        $('#txtCurrencyDesc').val(data.Description);
        $('#txtExchangeRate').val(data.ExchangeRate);
        $('#txtBuyRate').val(data.BuyRate);
        $('#txtSellRate').val(data.SellRate);
        $('#CurrencyModal').modal('show');
    }
    function GetCurrencyByID(id) {
        var request = $.ajax({
            type: 'POST',
            dataType: 'json',
            async: false,
            beforeSend: function () {
                return true;
            },
            url: SITE_URL + '/Currency/GetCurrencyByID',
            data: {
                ID: id
            }, success: function (data) {
            }, error: function (jqXHR, textStatus, errorThrown) {
                show_ajax_error(jqXHR, textStatus, errorThrown);
            }
        });
        var result = request.responseJSON;
        return (result.data != null) ? result.data : [];
    }
    function DeleteCurrency(id) {
        swal({
            title: 'Are you sure?',
            type: 'warning',
            showCancelButton: true,
            confirmButtonClass: 'btn btn-success',
            cancelButtonClass: 'btn btn-danger m-l-10',
            confirmButtonText: 'Yes'
        }).then(function () {
            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: SITE_URL + '/Currency/DeleteCurrencyByID',
                data: {
                    ID: id
                }, beforeSend: function () {
                    return true;
                }, success: function (data) {
                    var res = data.result;
                    if (res.result == "success") {
                        toastr.success(res.message, "Success");
                        $('#CurrencyModal').modal('hide');
                        LoadCurrency();
                    } else {
                        toastr.warning(res.message, "Error");
                    }
                }, error: function (jqXHR, textStatus, errorThrown) {
                    show_ajax_error(jqXHR, textStatus, errorThrown);
                }
            });
        })
    }
    function closeCurrency() {
        $('#CurrencyModal').modal('hide');
    }
    function AddNewCurrency() {
        $('#hidID').val('');
        $('#txtCurrencyCode').val('');
        $('#txtCurrencyDesc').val('');
        $('#txtExchangeRate').val('');
        $('#txtBuyRate').val('');
        $('#txtSellRate').val('');
        $('#method').val('add');
        $('#CurrencyModal').modal('show');
    }
    function saveCurrency() {
        var id = $('#hidID').val();
        var code = $('#txtCurrencyCode').val();
        var desc = $('#txtCurrencyDesc').val();
        var exrate = $('#txtExchangeRate').val();
        var buyrate = $('#txtBuyRate').val();
        var sellrate = $('#txtSellRate').val();
        var method = $('#method').val();
        $.ajax({
            type: 'POST',
            dataType: 'json',
            url: SITE_URL + "/Currency/SaveUpdateCurrency",
            data: {
                ID: id,
                Code: code,
                Description: desc,
                ExchangeRate: exrate,
                BuyRate: buyrate,
                SellRate: sellrate,
                Method: method
            }, success: function (data) {
                var res = data.result;
                if (res.result == "success") {
                    toastr.success(res.message, "Info");
                    $('#CurrencyModal').modal('hide');
                    LoadCurrency();
                }
                else {
                    toastr.warning(res.message, "Error");
                }
            }
        });
    }
</script>