@{
    ViewBag.Title = "Sale Person";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card m-b-20">
            <div class="card-body">
                <h4 class="mt-0 header-title">Sale Person Listing</h4>
                <div class="button-items">
                    <button type="button" class="btn btn-outline-dark waves-effect waves-light" onclick="AddNewSalePerson()"><i class="fa fa-plus"></i> Add</button>
                </div>
                <br />
                <div class="table-responsive">
                    <table id="dtSalePerson" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead class="thead-ful">
                            <tr>
                                <th style="text-align:center;">Code</th>
                                <th style="text-align:center;">Name</th>
                                <th style="text-align:center;">Address</th>
                                <th style="text-align:center;">Mobile</th>
                                <th style="text-align:center;">Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade bs-example-modal-xl" id="SalePersonModal" tabindex="-1" role="dialog" aria-labelledby="SalePersonModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="SalePersonModalLabel">Sale Person</h5>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card m-b-20">
                            <div class="card-body">
                                <div class="form-group row">
                                    <label for="txtSalePersonCode" class="col-sm-2 col-form-label AlignRight">Code</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="txtSalePersonCode" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="txtSalePersonName" class="col-sm-2 col-form-label AlignRight">Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="txtSalePersonName" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="txtAddress" class="col-sm-2 col-form-label AlignRight">Address</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="txtAddress" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="txtMobile" class="col-sm-2 col-form-label AlignRight">Mobile</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="txtMobile" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" onclick="saveSalePerson()" class="btn btn-primary waves-effect waves-light">Save</button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Html.Partial("Script")
}