@{
    ViewBag.Title = "Global Config";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card m-b-20">
            <div class="card-body">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active show" data-toggle="tab" href="#home" role="tab" aria-selected="true">Site</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane p-3 active show" id="home" role="tabpanel">
                        <div class="card-body">
                            <div class="form-group row" style="display:none;">
                                <label for="txtSiteName" class="col-sm-2 col-form-label">Site Name</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" value="Fulbright finicial group" id="txtSiteName">
                                </div>
                            </div>
                            <div class="form-group row" style="display:none;">
                                <label for="txtSiteMetaDesc" class="col-sm-2 col-form-label">Site Meta Description</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" rows="5" value="Site Meta Description" id="txtSiteMetaDesc">Site Meta Description</textarea>
                                </div>
                            </div>
                            <div class="form-group row" style="display:none;">
                                <label for="txtSiteMetaKeywords" class="col-sm-2 col-form-label">Site Meta Keywords</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" value="Site Meta Keywords" id="txtSiteMetaKeywords">
                                </div>
                            </div>
                            <div class="form-group row" style="display:none;">
                                <label for="switchShowAuthorMetaTag" class="col-sm-2 col-form-label">Show Author Meta Tag</label>
                                <div class="col-sm-10">
                                    <input type="checkbox" id="switchShowAuthorMetaTag" switch="info" checked />
                                    <label for="switchShowAuthorMetaTag" data-on-label="Yes" data-off-label="No"></label>
                                </div>
                            </div>
                            <div class="form-group row" style="display:none;">
                                <label for="txtDbType" class="col-sm-2 col-form-label">Database Type</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" value="MS SQL" id="txtDbType" readonly>
                                </div>
                            </div>
                            <div class="form-group row" style="display:none;">
                                <label for="txtDbUser" class="col-sm-2 col-form-label">Database Username</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" value="sa" id="txtDbUser" readonly>
                                </div>
                            </div>
                            <div class="form-group row" style="display:none;">
                                <label for="txtDbName" class="col-sm-2 col-form-label">Database Name</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" value="Fulbright" id="txtDbName" readonly>
                                </div>
                            </div>

                            <div class="form-group row" style="display:none;">
                                <label for="txtFromEmail" class="col-sm-2 col-form-label">From Email</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" value="visibleone.zak@gmail.com" id="txtFromEmail">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="txtToEmail" class="col-sm-2 col-form-label">To Email</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" value="cropcom@fulbright.com.hk" id="txtToEmail">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="txtMailSubject" class="col-sm-2 col-form-label">Mail Subject</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" id="txtMailSubject">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="txtMailBody" class="col-sm-2 col-form-label">Mail Body</label>
                                <div class="col-sm-10">
                                    <textarea class="tinyMCEEditorSystemManager" id="txtMailBody"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="switchSendMail" class="col-sm-2 col-form-label">Send Mail</label>
                                <div class="col-sm-10">
                                    <input type="checkbox" id="switchSendMail" switch="info" checked />
                                    <label for="switchSendMail" data-on-label="Yes" data-off-label="No"></label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div>
                                    <button type="button" id="btnUpdateConfig" class="btn btn-secondary waves-effect">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane p-3" id="profile" role="tabpanel">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Html.Partial("GlobalConfigScript")
}