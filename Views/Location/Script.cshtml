<script>
    var dtLocation;
    jQuery(document).ready(function () {
        dtLocation = $('#dtLocation').dataTable({
            lengthMenu: [[10, 25, 50, 100, 200, -1], [10, 25, 50, 100, 200, 'All']],
            columnDefs: [
                {
                    targets: [0], name: 'alias', className: 'center', orderable: true, sWidth: '5%',
                },
                {
                    targets: [1], name: 'name', className: 'left', sWidth: '10%', orderable: false, render: function (data) {
                        return '<span class="badge badge-pill badge-secondary edit" style="font-size: 13px;">' + data + '</span>';
                    }
                },
                {
                    targets: [2], name: 'action', className: 'left', sWidth: '10%', orderable: false,
                    editor: { type: 'action', required: false, class: '' }, render: _RenderContentButton
                },
                {
                    targets: [3], name: 'ID', className: 'left', visible: false, sWidth: '0%',
                }
            ]
        });
        dtLocation.on('draw.dt', function () {
            $('#dtLocation .tooltips').tooltip();
        });
        dtLocation.on('click', '.edit', function (e) {
            e.preventDefault();
            var pos = dtLocation.fnGetPosition($(this).closest('tr')[0]);
            var data = dtLocation.fnGetData(pos);
            var id = data[3];
            editLocation(id);
        });
        dtLocation.on('click', '.remove', function (e) {
            e.preventDefault();
            var pos = dtLocation.fnGetPosition($(this).closest('tr')[0]);
            var data = dtLocation.fnGetData(pos);
            var id = data[3];
            DeleteLocation(id);
        });
        LoadLocTable();
    });
    function LoadLocTable() {
        var data = GetLocation();
        dtLocation.api().clear().rows.add(data).draw();
    }
    function GetLocation() {
        var request = $.ajax({
            type: 'GET',
            dataType: 'json',
            async: false,
            beforeSend: function () {
                return true;
            },
            url: SITE_URL + "/Location/GetLocationList",
            data: {
            }, success: function (data) {
            }
        });
        var result = request.responseJSON;
        return (result.data != null) ? result.data : [];
    }
    function editLocation(id) {
        $('#hidID').val(id);
        $('#method').val('edit');
        var data = GetLocByID(id);
        $('#txtLocAlias').val(data.Alias);
        $('#txtLocName').val(data.Name);
        $('#LocationModal').modal('show');
    }
    function GetLocByID(id) {
        var request = $.ajax({
            type: 'POST',
            dataType: 'json',
            async: false,
            beforeSend: function () {
                return true;
            },
            url: SITE_URL + '/Location/GetLocationByID',
            data: {
                ID: id
            }, success: function (data) {
            }, error: function (jqXHR, textStatus, errorThrown) {
                show_ajax_error(jqXHR, textStatus, errorThrown);
            }
        });
        var result = request.responseJSON;
        return (result.data != null) ? result.data : [];
    }
    function DeleteLocation(id) {
        swal({
            title: 'Are you sure?',
            type: 'warning',
            showCancelButton: true,
            confirmButtonClass: 'btn btn-success',
            cancelButtonClass: 'btn btn-danger m-l-10',
            confirmButtonText: 'Yes'
        }).then(function () {
            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: SITE_URL + '/Location/DeleteLocByID',
                data: {
                    ID: id
                }, beforeSend: function () {
                    return true;
                }, success: function (data) {
                    var res = data.result;
                    if (res.result == "success") {
                        toastr.success(res.message, "Success");
                        $('#LocationModal').modal('hide');
                        LoadLocTable();
                    } else {
                        toastr.warning(res.message, "Error");
                    }
                }, error: function (jqXHR, textStatus, errorThrown) {
                    show_ajax_error(jqXHR, textStatus, errorThrown);
                }
            });
        })
    }
    function closeLocation() {
        $('#LocationModal').modal('hide');
    }
    function AddNewLocation() {
        $('#hidID').val('');
        $('#txtLocAlias').val('');
        $('#txtLocName').val('');
        $('#method').val('add');
        $('#LocationModal').modal('show');
    }
    function saveLocation() {
        var id = $('#hidID').val();
        var alias = $('#txtLocAlias').val();
        var locname = $('#txtLocName').val();
        var method = $('#method').val();
        $.ajax({
            type: 'POST',
            dataType: 'json',
            url: SITE_URL + "/Location/SaveUpdateLocation",
            data: {
                ID: id,
                Alias: alias,
                Name: locname,
                Method: method
            }, success: function (data) {
                var res = data.result;
                if (res.result == "success") {
                    toastr.success(res.message, "Info");
                    $('#LocationModal').modal('hide');
                    LoadLocTable();
                }
                else {
                    toastr.warning(res.message, "Error");
                }
            }
        });
    }
</script>