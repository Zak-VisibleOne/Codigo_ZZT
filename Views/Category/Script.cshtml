<script>
    var dtCat;
    jQuery(document).ready(function () {
        dtCat = $('#dtCat').dataTable({
            lengthMenu: [[10, 25, 50, 100, 200, -1], [10, 25, 50, 100, 200, 'All']],
            columnDefs: [
                {
                    targets: [0], name: 'code', className: 'center', orderable: true, sWidth: '5%',
                },
                {
                    targets: [1], name: 'name', className: 'left', sWidth: '10%', orderable: false, render: function (data) {
                        return '<span class="badge badge-pill badge-secondary edit" style="font-size: 13px;">' + data + '</span>';
                    }
                },
                {
                    targets: [2], name: 'action', className: 'left', sWidth: '10%', orderable: false,
                    editor: { type: 'action', required: false, class: '' }, render: _RenderContentButton
                },
                {
                    targets: [3], name: 'ID', className: 'left', visible: false, sWidth: '0%',
                }
            ]
        });
        dtCat.on('draw.dt', function () {
            $('#dtCat .tooltips').tooltip();
        });
        dtCat.on('click', '.edit', function (e) {
            e.preventDefault();
            var pos = dtCat.fnGetPosition($(this).closest('tr')[0]);
            var data = dtCat.fnGetData(pos);
            var id = data[3];
            editCat(id);
        });
        dtCat.on('click', '.remove', function (e) {
            e.preventDefault();
            var pos = dtCat.fnGetPosition($(this).closest('tr')[0]);
            var data = dtCat.fnGetData(pos);
            var id = data[3];
            DeleteCat(id);
        });
        LoadCatTable();
    });
    function LoadCatTable() {
        var data = GetCat();
        dtCat.api().clear().rows.add(data).draw();
    }
    function GetCat() {
        var request = $.ajax({
            type: 'GET',
            dataType: 'json',
            async: false,
            beforeSend: function () {
                return true;
            },
            url: SITE_URL + "/Category/GetCatList",
            data: {
            }, success: function (data) {
            }
        });
        var result = request.responseJSON;
        return (result.data != null) ? result.data : [];
    }
    function editCat(id) {
        $('#hidID').val(id);
        $('#method').val('edit');
        var data = GetCatByID(id);
        $('#txtCategoryCode').val(data.CategoryCode);
        $('#txtCategoryName').val(data.CategoryName);
        $('#CategoryModal').modal('show');
    }
    function GetCatByID(id) {
        var request = $.ajax({
            type: 'POST',
            dataType: 'json',
            async: false,
            beforeSend: function () {
                return true;
            },
            url: SITE_URL + '/Category/GetCatByID',
            data: {
                ID: id
            }, success: function (data) {
            }, error: function (jqXHR, textStatus, errorThrown) {
                show_ajax_error(jqXHR, textStatus, errorThrown);
            }
        });
        var result = request.responseJSON;
        return (result.data != null) ? result.data : [];
    }
    function DeleteCat(id) {
        swal({
            title: 'Are you sure?',
            type: 'warning',
            showCancelButton: true,
            confirmButtonClass: 'btn btn-success',
            cancelButtonClass: 'btn btn-danger m-l-10',
            confirmButtonText: 'Yes'
        }).then(function () {
            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: SITE_URL + '/Category/DeleteCatByID',
                data: {
                    ID: id
                }, beforeSend: function () {
                    return true;
                }, success: function (data) {
                    var res = data.result;
                    if (res.result == "success") {
                        toastr.success(res.message, "Success");
                        $('#CategoryModal').modal('hide');
                        LoadCatTable();
                    } else {
                        toastr.warning(res.message, "Error");
                    }
                }, error: function (jqXHR, textStatus, errorThrown) {
                    show_ajax_error(jqXHR, textStatus, errorThrown);
                }
            });
        })
    }
    function closeCat() {
        $('#CategoryModal').modal('hide');
    }
    function AddNewCat() {
        $('#hidID').val('');
        $('#txtCategoryCode').val('');
        $('#txtCategoryName').val('');
        $('#method').val('add');
        $('#CategoryModal').modal('show');
    }
    function saveCat() {
        var id = $('#hidID').val();
        var code = $('#txtCategoryCode').val();
        var name = $('#txtCategoryName').val();
        var method = $('#method').val();
        $.ajax({
            type: 'POST',
            dataType: 'json',
            url: SITE_URL + "/Category/SaveUpdateCat",
            data: {
                ID: id,
                CategoryCode: code,
                CategoryName: name,
                Method: method
            }, success: function (data) {
                var res = data.result;
                if (res.result == "success") {
                    toastr.success(res.message, "Info");
                    $('#CategoryModal').modal('hide');
                    LoadCatTable();
                }
                else {
                    toastr.warning(res.message, "Error");
                }
            }
        });
    }
</script>