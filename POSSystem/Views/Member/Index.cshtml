@{
    ViewBag.Title = "Member";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card m-b-20">
            <div class="card-body">
                <h4 class="mt-0 header-title titleCor">Member listing</h4>
                <div class="btn-toolbar p-3" role="toolbar">
                    <div class="btn-group mo-mb-2">
                        <button type="button" class="btn btn-primary waves-light waves-effect" onclick="AddNewMember()" data-toggle="tooltip" data-placement="top" title="Add new"><i class="fas fa-plus-circle"></i> New</button>
                    </div>
                </div>
                <br />
                <div class="table-responsive">
                    <table id="dtMember" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead class="thead-ful">
                            <tr>
                                <th style="text-align:center;">Member Code</th>
                                <th style="text-align:center;">Member Name</th>
                                <th style="text-align:center;">Mobile No</th>
                                <th style="text-align:center;">Total Point</th>
                                <th style="text-align:center;">Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade bs-example-modal-lg" id="MemberModal" tabindex="-1" role="dialog" aria-labelledby="MemberModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="MemberModalLabel">Member</h5>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card m-b-20">
                            <div class="card-body">
                                <div class="form-group row">
                                    <label for="txtMemberCode" class="col-sm-3 col-form-label AlignRight">Member Code</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" type="text" id="txtMemberCode">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="txtMemberName" class="col-sm-3 col-form-label AlignRight">Member Name</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" type="text" id="txtMemberName">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="txtMobileNo" class="col-sm-3 col-form-label AlignRight">Moble No</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" type="text" id="txtMobileNo">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="txtTotalPoint" class="col-sm-3 col-form-label AlignRight">Total Point</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" type="text" id="txtTotalPoint">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="txtTotalPurchaseAmount" class="col-sm-3 col-form-label AlignRight">Total Purchase Amount</label>
                                    <div class="col-sm-9">
                                        <input class="form-control" type="text" id="txtTotalPurchaseAmount">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="closeMember()" class="btn btn-secondary waves-effect">
                    <i class="fa fa-times" aria-hidden="true"></i> Close
                </button>
                <button type="button" onclick="saveMember()" class="btn btn-primary waves-effect waves-light">Save</button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Html.Partial("Script")
}