<script>
    var dtClass;
    jQuery(document).ready(function () {
        dtClass = $('#dtClass').dataTable({
            lengthMenu: [[10, 25, 50, 100, 200, -1], [10, 25, 50, 100, 200, 'All']],
            columnDefs: [
                {
                    targets: [0], name: 'alias', className: 'center', orderable: true, sWidth: '5%',
                },
                {
                    targets: [1], name: 'name', className: 'left', sWidth: '10%', orderable: false, render: function (data) {
                        return '<span class="badge badge-pill badge-secondary edit" style="font-size: 13px;">' + data + '</span>';
                    }
                },
                {
                    targets: [2], name: 'action', className: 'left', sWidth: '10%', orderable: false,
                    editor: { type: 'action', required: false, class: '' }, render: _RenderContentButton
                },
                {
                    targets: [3], name: 'ID', className: 'left', visible: false, sWidth: '0%',
                }
            ]
        });
        dtClass.on('draw.dt', function () {
            $('#dtClass .tooltips').tooltip();
        });
        dtClass.on('click', '.edit', function (e) {
            e.preventDefault();
            var pos = dtClass.fnGetPosition($(this).closest('tr')[0]);
            var data = dtClass.fnGetData(pos);
            var id = data[3];
            editClass(id);
        });
        dtClass.on('click', '.remove', function (e) {
            e.preventDefault();
            var pos = dtClass.fnGetPosition($(this).closest('tr')[0]);
            var data = dtClass.fnGetData(pos);
            var id = data[3];
            DeleteClass(id);
        });
        LoadClass();
    });
    function LoadClass() {
        var data = GetClass();
        dtClass.api().clear().rows.add(data).draw();
    }
    function GetClass() {
        var request = $.ajax({
            type: 'GET',
            dataType: 'json',
            async: false,
            beforeSend: function () {
                return true;
            },
            url: SITE_URL + "/StockClass/GetStockClassList",
            data: {
            }, success: function (data) {
            }
        });
        var result = request.responseJSON;
        return (result.data != null) ? result.data : [];
    }
    function editClass(id) {
        $('#hidID').val(id);
        $('#method').val('edit');
        var data = GetClassByID(id);
        $('#txtClassAlias').val(data.Alias);
        $('#txtClassName').val(data.Name);
        $('#ClassModal').modal('show');
    }
    function GetClassByID(id) {
        var request = $.ajax({
            type: 'POST',
            dataType: 'json',
            async: false,
            beforeSend: function () {
                return true;
            },
            url: SITE_URL + '/StockClass/GetStockClassByID',
            data: {
                ID: id
            }, success: function (data) {
            }, error: function (jqXHR, textStatus, errorThrown) {
                show_ajax_error(jqXHR, textStatus, errorThrown);
            }
        });
        var result = request.responseJSON;
        return (result.data != null) ? result.data : [];
    }
    function DeleteClass(id) {
        swal({
            title: 'Are you sure?',
            type: 'warning',
            showCancelButton: true,
            confirmButtonClass: 'btn btn-success',
            cancelButtonClass: 'btn btn-danger m-l-10',
            confirmButtonText: 'Yes'
        }).then(function () {
            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: SITE_URL + '/StockClass/DeleteStockClassByID',
                data: {
                    ID: id
                }, beforeSend: function () {
                    return true;
                }, success: function (data) {
                    var res = data.result;
                    if (res.result == "success") {
                        toastr.success(res.message, "Success");
                        $('#ClassModal').modal('hide');
                        LoadClass();
                    } else {
                        toastr.warning(res.message, "Error");
                    }
                }, error: function (jqXHR, textStatus, errorThrown) {
                    show_ajax_error(jqXHR, textStatus, errorThrown);
                }
            });
        })
    }
    function closeClass() {
        $('#ClassModal').modal('hide');
    }
    function AddNewClass() {
        $('#hidID').val('');
        $('#txtClassAlias').val('');
        $('#txtClassName').val('');
        $('#method').val('add');
        $('#ClassModal').modal('show');
    }
    function saveClass() {
        var id = $('#hidID').val();
        var alias = $('#txtClassAlias').val();
        var name = $('#txtClassName').val();
        var method = $('#method').val();
        $.ajax({
            type: 'POST',
            dataType: 'json',
            url: SITE_URL + "/StockClass/SaveUpdateStockClass",
            data: {
                ID: id,
                Alias: alias,
                Name: name,
                Method: method
            }, success: function (data) {
                var res = data.result;
                if (res.result == "success") {
                    toastr.success(res.message, "Info");
                    $('#ClassModal').modal('hide');
                    LoadClass();
                }
                else {
                    toastr.warning(res.message, "Error");
                }
            }
        });
    }
</script>