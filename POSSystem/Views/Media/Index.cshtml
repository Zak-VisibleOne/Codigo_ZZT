@{
    ViewBag.Title = "Media";
}
<div class="row">
    <input type="hidden" id="methodMedia" name="methodMedia" value="0" class="form-control">
    <div class="col-lg-12">
        <div class="card m-b-20">
            <div class="card-body">
                <h4 class="mt-0 header-title titleCor">Media listing</h4>
                <div class="btn-toolbar p-3" role="toolbar">
                    <div class="btn-group mo-mb-2">
                        <button type="button" class="btn btn-primary waves-light waves-effect" id="btnNewMedia" data-toggle="tooltip" data-placement="top" title="Add new file"><i class="fas fa-plus-circle"></i></button>
                        <button type="button" class="btn btn-primary waves-light waves-effect" onclick="onclickRefreshMedia()" title="Refresh media page"><i class="ion-refresh"></i></button>
                        <button type="button" class="btn btn-primary waves-light waves-effect"><i class="fa fa-exclamation-circle"></i></button>
                        <button type="button" class="btn btn-primary waves-light waves-effect" onclick="onclick_MultipleDeletePage()" data-toggle="tooltip" data-placement="top" title="Delete multiple page"><i class="far fa-trash-alt"></i></button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Media type Filter</label>
                            <div class="col-sm-9">
                                <select class="custom-select" id="MediaType" name="MediaType">
                                    <option value="0" selected="">All media items</option>
                                    <option value="1">Images</option>
                                    <option value="2">Pdf Documents</option>
                                    <option value="3">Zip-compressed</option>
                                    <option value="4">Application exe</option>
                                    <option value="5">svc file</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table id="dtMediaImageListing" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead class="thead-ful">
                            <tr>
                                <th style="">SrNo</th>
                                <th style="text-align:center;">Media</th>
                                <th style="text-align:center;">Image</th>
                                <th style="text-align:center;">Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade bs-example-modal-lg" id="MediaUpdateModal" tabindex="-1" role="dialog" aria-labelledby="MediaUpdateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="MediaUpdateModalLabel">Media Upload</h5>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card m-b-20">
                            <div class="card-body">
                                <div class="form-group row">
                                    <label for="FileUpload_Image_enUS" class="col-sm-3 col-form-label phLabel">Image Location </label>
                                    <div class="col-sm-9">
                                        <input type="file" class="filestyle" id="FileUpload_Image_enUS" data-buttonname="btn-secondary">
                                    </div>
                                </div>
                                <hr />
                                <div class="">
                                    <img id="imgImage_enUS" alt="image" class="img-fluid" src="~/MediaFolder/sample/sample.png" />
                                </div>
                                <div class="form-group" style="display:none;">
                                    <label>Content.Name</label>
                                    <input class="form-control" type="text" id="txtImageName_enUS">
                                </div>
                                <div class="form-group" style="display:none;">
                                    <label>Content.ImageUrl</label>
                                    <input type="text" id="txtURL_enUS_Image" class="form-control form-control-sm" />
                                </div>
                                <div class="form-group" style="display:none;">
                                    <label></label>
                                    <button type="button" class="btn btn-secondary btn-sm waves-effect waves-light" onclick="onClick_UploadMediaFile()">
                                        <i class="fa fa-upload" aria-hidden="true"></i> Update
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type='button' onclick="onClick_SaveMediaData()" class="btn btn-primary waves-effect" value='Save' id='btnSaveUpdate_Media'>
                <button type="button" onclick="onClick_CloseMediaUpdate()" class="btn btn-secondary waves-effect waves-light">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade bs-example-modal-lg" id="MediaDataShowModal" tabindex="-1" role="dialog" aria-labelledby="MediaDataShowModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="MediaDataShowModalLabel">Preview</h5>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="card m-b-20">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-7">
                                <div class="">
                                    <img class="d-block img-fluid" id="imgShowImage_enUS" src="/images/small/img-3.jpg" data-holder-rendered="true">
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="card m-b-20">
                                    <div class="card-body">
                                        <address>
                                            <strong>Name:</strong>
                                            <label id="lblImageName_enUS"></label>
                                            <br>
                                            <strong>Type:</strong>
                                            <label id="lblFileType_enUS" style="word-break:break-all;"></label>
                                            <br>
                                            <strong>UploadedDate:</strong>
                                            <label id="lblUploadedOn_enUS"></label>
                                            <br>
                                            <strong>Size:</strong>
                                            <label id="lblFileSize_enUS"></label>
                                            <br />
                                            <strong>UploadedBy:</strong>
                                            <label id="lblUploadedUser"></label>
                                        </address>
                                        <div class="button-items">
                                            <a href="" id="srcDonwload" class="btn btn-outline-secondary waves-effect" download><i class="fas fa-download"></i> Download</a>
                                            <a href="" id="previewData" class="btn btn-outline-secondary waves-effect" target="_blank"><i class="fas fa-file-alt"></i> Preview</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="form-group">
                            <label>Name</label>
                            <input class="form-control" type="text" id="txtShowImageName_enUS">
                        </div>
                        <div class="form-group">
                            <label>Link</label>
                            <div>
                                <input type="text" id="txtShowURL_enUS_Image" class="form-control" style="font-size: 12px;color:blue;" readonly />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="onClick_CloseMediaPreview()" class="btn btn-secondary waves-effect waves-light">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade bs-example-modal-lg" id="ImagePreviewFullWidthModal" tabindex="-1" role="dialog" aria-labelledby="ImagePreviewFullWidthModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="MediaUpdateModalLabel">Image Preview</h5>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="card-body">
                    <div class="form-group">
                        <input type="text" id="imgPreviewID" hidden />
                        <div id="imgPreviewContainer"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="onClick_CloseImagePreviewModal()" class="btn btn-secondary waves-effect waves-light">Close</button>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Html.Partial("MediaScript");
}
