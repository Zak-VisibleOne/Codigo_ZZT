@{
    ViewBag.Title = "Supplier";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card m-b-20">
            <div class="card-body">
                <h4 class="mt-0 header-title">Supplier Listing</h4>
                <div class="button-items">
                    <button type="button" class="btn btn-outline-dark waves-effect waves-light" onclick="AddNew()"><i class="fa fa-plus"></i> Add</button>
                </div>
                <br />
                <div class="table-responsive">
                    <table id="dtSup" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead class="thead-ful">
                            <tr>
                                <th style="text-align:center;">SrNo</th>
                                <th style="text-align:center;">Name</th>
                                <th style="text-align:center;">Township</th>
                                <th style="text-align:center;">Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade bs-example-modal-xl" id="SupModal" tabindex="-1" role="dialog" aria-labelledby="SupModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="SupModalLabel">Supplier</h5>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card m-b-20">
                            <div class="card-body">
                                <div class="form-group row">
                                    <label for="txtSrNo" class="col-sm-2 col-form-label AlignRight">SrNo</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="txtSrNo" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="txtCustName" class="col-sm-2 col-form-label AlignRight">Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="txtSupName" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="ddlGender" class="col-sm-2 col-form-label AlignRight">Gender</label>
                                    <div class="col-sm-10">
                                        <select class="form-control" id="ddlGender" name="ddlGender">
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="ddlTsp" class="col-sm-2 col-form-label AlignRight">Township</label>
                                    <div class="col-sm-10">
                                        <select class="form-control" id="ddlTsp" name="ddlTsp"></select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="ddlCty" class="col-sm-2 col-form-label AlignRight">City</label>
                                    <div class="col-sm-10">
                                        <select class="form-control" id="ddlCty" name="ddlCty"></select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="txtAddress" class="col-sm-2 col-form-label AlignRight">Address</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="txtAddress" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="txtPhone" class="col-sm-2 col-form-label AlignRight">Phone</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="txtPhone" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="txtEmail" class="col-sm-2 col-form-label AlignRight">Email</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="txtEmail" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="txtWebsite" class="col-sm-2 col-form-label AlignRight">Website</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="txtWebsite" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" onclick="save()" class="btn btn-primary waves-effect waves-light">Save</button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Html.Partial("Script")
}