@{
    ViewBag.Title = "System log";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card m-b-20">
            <div class="card-body">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active show" data-toggle="tab" href="#Logging" role="tab" aria-selected="true">Logging</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active p-3" id="Logging" role="tabpanel">
                        <div class="card m-b-20">
                            <div class="card-body">
                                <h4 class="mt-0 header-title">Filter</h4>
                                <div class="form-group row" style="display:flex">
                                    <label for="LogFDate" class="col-sm-2 col-form-label" style="text-align: right;">From</label>
                                    <div class="col-sm-4">
                                        <input class="form-control" type="date" id="LogFDate">
                                    </div>
                                    <label for="LogTDate" class="col-sm-2 col-form-label" style="text-align: right;">To</label>
                                    <div class="col-sm-4">
                                        <input class="form-control" type="date" id="LogTDate">
                                    </div>
                                </div>
                                <div class="button-items">
                                    <button type="button" onclick="onclickSearchLog()" class="btn btn-secondary waves-effect waves-light"><i class="fas fa-search"></i> Search</button>
                                </div>
                            </div>
                        </div>

                        <div class="card m-b-20">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="dtLog" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                        <thead class="thead-ful">
                                            <tr>
                                                <th style="text-align:center;">SrNo</th>
                                                <th style="text-align:center;">LogDate</th>
                                                <th style="text-align:center;">Page</th>
                                                <th style="text-align:center;">Logging</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @Html.Partial("SystemLogScript")
}