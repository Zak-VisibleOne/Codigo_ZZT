<script>
    var dtSalePerson;
    jQuery(document).ready(function () {
        dtSalePerson = $('#dtSalePerson').dataTable({
            lengthMenu: [[10, 25, 50, 100, 200, -1], [10, 25, 50, 100, 200, 'All']],
            columnDefs: [
                {
                    targets: [0], name: 'code', className: 'left', sWidth: '5%', orderable: false, render: function (data) {
                        return '<span class="badge badge-pill badge-secondary edit" style="font-size: 13px;">' + data + '</span>';
                    }
                },
                {
                    targets: [1], name: 'name', className: 'left', orderable: false, sWidth: '10%',
                },
                {
                    targets: [2], name: 'address', className: 'left', orderable: false, sWidth: '5%',
                },
                {
                    targets: [3], name: 'mobile', className: 'left', orderable: false, sWidth: '5%',
                },
                {
                    targets: [4], name: 'action', className: 'left', sWidth: '5%', orderable: false,
                    editor: { type: 'action', required: false, class: '' }, render: _RenderContentButton
                },
                {
                    targets: [5], name: 'id', visible: false, sWidth: '0%',
                }
            ]
        });
        dtSalePerson.on('draw.dt', function () {
            $('#dtSalePerson .tooltips').tooltip();
        });
        dtSalePerson.on('click', '.edit', function (e) {
            e.preventDefault();
            var pos = dtSalePerson.fnGetPosition($(this).closest('tr')[0]);
            var data = dtSalePerson.fnGetData(pos);
            var id = data[5];
            editSalePerson(id);
        });
        dtSalePerson.on('click', '.remove', function (e) {
            e.preventDefault();
            var pos = dtSalePerson.fnGetPosition($(this).closest('tr')[0]);
            var data = dtSalePerson.fnGetData(pos);
            var id = data[5];
            DeleteSalePerson(id);
        });
        LoadSalePerson();
    });
    function LoadSalePerson() {
        var data = GetSalePersonList();
        dtSalePerson.api().clear().rows.add(data).draw();
    }
    function GetSalePersonList() {
        var request = $.ajax({
            type: 'GET',
            dataType: 'json',
            async: false,
            beforeSend: function () {
                return true;
            },
            url: "/SalePerson/GetSalePersonList",
            data: {
            }, success: function (data) {
            }
        });
        var result = request.responseJSON;
        return (result.data != null) ? result.data : [];
    }
    function editSalePerson(id) {        
        $('#hidID').val(id);
        $('#method').val('edit');
        var data = GetSalePersonByID(id);
        $('#txtSalePersonCode').val(data.SalePersonCode);
        $('#txtSalePersonName').val(data.SalePersonName);
        $('#txtAddress').val(data.Address);
        $('#txtMobile').val(data.Mobile);
        $('#SalePersonModal').modal('show');
    }
    function GetSalePersonByID(id) {
        var request = $.ajax({
            type: 'POST',
            dataType: 'json',
            async: false,
            beforeSend: function () {
                return true;
            },
            url: '/SalePerson/GetSalePersonByID',
            data: {
                ID: id
            }, success: function (data) {
            }, error: function (jqXHR, textStatus, errorThrown) {
                show_ajax_error(jqXHR, textStatus, errorThrown);
            }
        });
        var result = request.responseJSON;
        return (result.data != null) ? result.data : [];
    }
    function DeleteSalePerson(id) {
        swal({
            title: 'Are you sure?',
            type: 'warning',
            showCancelButton: true,
            confirmButtonClass: 'btn btn-success',
            cancelButtonClass: 'btn btn-danger m-l-10',
            confirmButtonText: 'Yes'
        }).then(function () {
            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: '/SalePerson/DeleteSalePerson',
                data: {
                    ID: id
                }, beforeSend: function () {
                    return true;
                }, success: function (data) {
                    var res = data.result;
                    if (res.result == "success") {
                        toastr.success(res.message, "Success");
                        $('#SalePersonModal').modal('hide');
                        LoadSalePerson();
                    } else {
                        toastr.warning(res.message, "Error");
                    }
                }, error: function (jqXHR, textStatus, errorThrown) {
                    show_ajax_error(jqXHR, textStatus, errorThrown);
                }
            });
        })
    }
    function AddNewSalePerson() {
        $('#hidID').val('0');
        $('#txtSalePersonCode').val('');
        $('#txtSalePersonName').val('');
        $('#txtAddress').val('');
        $('#txtMobile').val('');
        $('#method').val('add');
        $('#SalePersonModal').modal('show');
    }
    function saveSalePerson() {
        var id = $('#hidID').val();
        var code = $('#txtSalePersonCode').val();
        var name = $('#txtSalePersonName').val();
        var address = $('#txtAddress').val();
        var mobile = $('#txtMobile').val();
        var method = $('#method').val();
        $.ajax({
            type: 'POST',
            dataType: 'json',
            url: "/SalePerson/SaveUpdateSalePerson",
            data: {
                ID: id,
                SalePersonCode: code,
                SalePersonName: name,
                Address: address,
                Mobile: mobile,
                Method: method
            }, success: function (data) {
                var res = data.result;
                if (res.result == "success") {
                    toastr.success(res.message, "Info");
                    $('#SalePersonModal').modal('hide');
                    LoadSalePerson();
                }
                else {
                    toastr.warning(res.message, "Error");
                }
            }
        });
    }
</script>