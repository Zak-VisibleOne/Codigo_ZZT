<script>
    var dtInvType;
    jQuery(document).ready(function () {
        dtInvType = $('#dtInvType').dataTable({
            lengthMenu: [[10, 25, 50, 100, 200, -1], [10, 25, 50, 100, 200, 'All']],
            columnDefs: [
                {
                    targets: [0], name: 'code', className: 'center', orderable: true, sWidth: '5%',
                },
                {
                    targets: [1], name: 'name', className: 'left', sWidth: '10%', orderable: false, render: function (data) {
                        return '<span class="badge badge-pill badge-secondary edit" style="font-size: 13px;">' + data + '</span>';
                    }
                },
                {
                    targets: [2], name: 'action', className: 'left', sWidth: '10%', orderable: false,
                    editor: { type: 'action', required: false, class: '' }, render: _RenderContentButton
                },
                {
                    targets: [3], name: 'ID', className: 'left', visible: false, sWidth: '0%',
                }
            ]
        });
        dtInvType.on('draw.dt', function () {
            $('#dtInvType .tooltips').tooltip();
        });
        dtInvType.on('click', '.edit', function (e) {
            e.preventDefault();
            var pos = dtInvType.fnGetPosition($(this).closest('tr')[0]);
            var data = dtInvType.fnGetData(pos);
            var id = data[3];
            editInvType(id);
        });
        dtInvType.on('click', '.remove', function (e) {
            e.preventDefault();
            var pos = dtInvType.fnGetPosition($(this).closest('tr')[0]);
            var data = dtInvType.fnGetData(pos);
            var id = data[3];
            DeleteInvType(id);
        });
        LoadInvType();
    });
    function LoadInvType() {
        var data = GetInvType();
        dtInvType.api().clear().rows.add(data).draw();
    }
    function GetInvType() {
        var request = $.ajax({
            type: 'GET',
            dataType: 'json',
            async: false,
            beforeSend: function () {
                return true;
            },
            url: SITE_URL + "/InvoiceType/GetInvTypeList",
            data: {
            }, success: function (data) {
            }
        });
        var result = request.responseJSON;
        return (result.data != null) ? result.data : [];
    }
    function editInvType(id) {
        $('#hidID').val(id);
        $('#method').val('edit');
        var data = GeInvTypeByID(id);
        $('#txtInvTypeCode').val(data.InvoiceTypeCode);
        $('#txtInvTypeDesc').val(data.Description);
        $('#InvoiceTypeModal').modal('show');
    }
    function GeInvTypeByID(id) {
        var request = $.ajax({
            type: 'POST',
            dataType: 'json',
            async: false,
            beforeSend: function () {
                return true;
            },
            url: SITE_URL + '/InvoiceType/GetInvTypeByID',
            data: {
                ID: id
            }, success: function (data) {
            }, error: function (jqXHR, textStatus, errorThrown) {
                show_ajax_error(jqXHR, textStatus, errorThrown);
            }
        });
        var result = request.responseJSON;
        return (result.data != null) ? result.data : [];
    }
    function DeleteInvType(id) {
        swal({
            title: 'Are you sure?',
            type: 'warning',
            showCancelButton: true,
            confirmButtonClass: 'btn btn-success',
            cancelButtonClass: 'btn btn-danger m-l-10',
            confirmButtonText: 'Yes'
        }).then(function () {
            $.ajax({
                type: 'POST',
                dataType: 'json',
                url: SITE_URL + '/InvoiceType/DeleteInvTypeByID',
                data: {
                    ID: id
                }, beforeSend: function () {
                    return true;
                }, success: function (data) {
                    var res = data.result;
                    if (res.result == "success") {
                        toastr.success(res.message, "Success");
                        $('#InvoiceTypeModal').modal('hide');
                        LoadInvType();
                    } else {
                        toastr.warning(res.message, "Error");
                    }
                }, error: function (jqXHR, textStatus, errorThrown) {
                    show_ajax_error(jqXHR, textStatus, errorThrown);
                }
            });
        })
    }
    function closeInvoiceType() {
        $('#InvoiceTypeModal').modal('hide');
    }
    function AddNewInvoiceType() {
        $('#hidID').val('');
        $('#txtInvTypeCode').val('');
        $('#txtInvTypeDesc').val('');
        $('#method').val('add');
        $('#InvoiceTypeModal').modal('show');
    }
    function saveInvoiceType() {
        var id = $('#hidID').val();
        var code = $('#txtInvTypeCode').val();
        var desc = $('#txtInvTypeDesc').val();
        var method = $('#method').val();
        $.ajax({
            type: 'POST',
            dataType: 'json',
            url: SITE_URL + "/InvoiceType/SaveUpdateInvType",
            data: {
                ID: id,
                InvoiceTypeCode: code,
                Description: desc,
                Method: method
            }, success: function (data) {
                var res = data.result;
                if (res.result == "success") {
                    toastr.success(res.message, "Info");
                    $('#InvoiceTypeModal').modal('hide');
                    LoadInvType();
                }
                else {
                    toastr.warning(res.message, "Error");
                }
            }
        });
    }
</script>