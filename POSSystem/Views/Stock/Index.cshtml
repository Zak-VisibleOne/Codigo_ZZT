@{
    ViewBag.Title = "Stock Listing";
}
<div class="CB_LIST">
    <div class="row">
        <div class="col-12">
            <div class="card m-b-20">
                <div class="card-body">
                    <h4 class="mt-0 header-title">Stock Listing</h4>
                    <div class="button-items">
                        <button type="button" class="btn btn-outline-dark waves-effect waves-light" onclick="AddNewStock()"><i class="fa fa-plus"></i> Add</button>
                    </div>
                    <br />
                    <div class="table-responsive">
                        <table id="dtStockItem" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead class="thead-ful">
                                <tr>
                                    <th style="text-align:center;">Code</th>
                                    <th style="text-align:center;">Description</th>
                                    <th style="text-align:center;">Sale Amount</th>
                                    <th style="text-align:center;">Purchase Amount</th>
                                    <th style="text-align:center;">Category</th>
                                    <th style="text-align:center;">Action</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="CB_FORM" style="display:none">
    <div class="card m-b-20">
        <div class="card-body">
            <ul class="nav nav-tabs nav-tabs-custom" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#DetailTab" role="tab">Detail</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#OtherTab" role="tab">Other</a>
                </li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane active p-3" id="DetailTab" role="tabpanel">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="card m-b-30">
                                <div class="card-body">
                                    <div class="">
                                        <img id="StockImage" alt="image" class="img-thumbnail" src="/images/users/user-4.jpg" onclick="SetImageStock()" data-holder-rendered="true" />
                                    </div>
                                    <button class="btn btn-outline-secondary btn-sm btn-block waves-effect tooltips" title="Edit Image" type="button" data-toggle="collapse" data-target="#collapseImage"
                                            aria-expanded="false" aria-controls="collapseImage" onclick="SetImageStock()">
                                        <i class="fa fa-edit"></i> EditImage
                                    </button>
                                    <div class="collapse" id="collapseImage">
                                        <div class="form-group">
                                            <label>ImageUrl</label>
                                            <input type="text" id="txtStockImageUrl" class="form-control form-control-sm" style="font-size: 10px;" disabled />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="form-group row">
                                <label for="txtStockCode" class="col-sm-2 col-form-label AlignRight">Code</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" id="txtStockCode">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="txtStockDescription" class="col-sm-2 col-form-label AlignRight">Description</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="txtStockDescription" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="ddlCategory" class="col-sm-2 col-form-label AlignRight">Category</label>
                                <div class="col-sm-4">
                                    <select class="form-control" id="ddlCategory" name="ddlCategory"></select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="txtSalePrice" class="col-sm-2 col-form-label AlignRight">Sale Price</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="txtSalePrice" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="txtPurchasePrice" class="col-sm-2 col-form-label AlignRight">Purchase Price</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="txtPurchasePrice" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="txtRemark" class="col-sm-2 col-form-label AlignRight">Remark</label>
                                <div class="col-sm-10">
                                    <textarea class="tinyMCEEditor" id="txtRemark"></textarea>
                                </div>
                            </div>
                            <hr />
                            <div class="button-items">
                                <button type="button" class="btn btn-primary" onclick="saveStock()"> Save</button>
                                <button type="button" class="btn btn-outline-dark waves-effect waves-light" onclick="closeStock()">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane p-3" id="OtherTab" role="tabpanel">
                    <div class="card-body">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade bs-example-modal-xl" id="SaveUpdateImgModal" tabindex="-1" role="dialog" aria-labelledby="SaveUpdateImgModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="SaveUpdateImgModalLabel">Content Action</h5>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card m-b-20">
                            <div class="card-body">
                                <div class="form-group row">
                                    <label for="txtCode" class="col-sm-2 col-form-label AlignRight">Code</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" id="txtCode">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="txtName" class="col-sm-2 col-form-label AlignRight">Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="txtName" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="txtAmt" class="col-sm-2 col-form-label AlignRight">Amt</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="txtAmt" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="ddl1" class="col-sm-2 col-form-label AlignRight">ddl1</label>
                                    <div class="col-sm-4">
                                        <select class="form-control" id="ddl1" name="ddl1"></select>
                                    </div>
                                    <label for="ddl2" class="col-sm-2 col-form-label AlignRight">ddl2</label>
                                    <div class="col-sm-4">
                                        <select class="form-control" id="ddl2" name="ddl2"></select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="ddl3" class="col-sm-2 col-form-label AlignRight">ddl3</label>
                                    <div class="col-sm-4">
                                        <select class="form-control" id="ddl3" name="ddl3"></select>
                                    </div>
                                    <label for="ddl4" class="col-sm-2 col-form-label AlignRight">ddl4</label>
                                    <div class="col-sm-4">
                                        <select class="form-control" id="ddl4" name="ddl4"></select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="txtRemark" class="col-sm-2 col-form-label AlignRight">Remark</label>
                                    <div class="col-sm-10">
                                        <textarea class="tinyMCEEditor" id="txtRemark"></textarea>
                                    </div>
                                </div>
                                <hr />
                                <div class="button-items">
                                    <button type="button" class="btn btn-primary" onclick="saveM()">Save</button>
                                    <button type="button" class="btn btn-outline-dark waves-effect waves-light" onclick="closeM()">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="closeImg()" class="btn btn-secondary waves-effect"><i class="fa fa-times" aria-hidden="true"></i>Close</button>
                <input type='button' onclick="saveImg()" class="btn btn-primary waves-effect waves-light" value='Save'>
            </div>
        </div>
    </div>
</div>


@section scripts{
    @Html.Partial("Script")
}
